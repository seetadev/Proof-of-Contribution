# Environment Variables for Blockchain Development

# Private key for deployment (DO NOT COMMIT TO VERSION CONTROL)
PRIVATE_KEY=your_private_key_here

# Alchemy API key for Ethereum node connection
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Pinata API keys for IPFS storage
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# PYUSD Token Contract Address on Sepolia
PYUSD_TOKEN_ADDRESS=0xCaC524BcA292aaade2DF8A05cC58F0a65B1B3bB9

# Future multichain API keys
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Gas settings
REPORT_GAS=true